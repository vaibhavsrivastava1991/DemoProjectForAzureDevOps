@model BAL.Models.UserProfileMaster

@{
//Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card login_page">
	<div class="row loginRow">
		<div id="snackbar">Successfully Registered...</div>
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<div class="signup_form">
				<div class="form_header">
					<div class="quick_links" style="text-align:center">

						<h2>
							Sign Up

						</h2>

					</div>
				</div>
				@using (Html.BeginForm())
				{
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<div class="form-group">
						<label for="firstNameTextBox">First Name</label>
						@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name", @id = "firstNameTextBox" } })
						@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
						@*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@
					</div>
					<div class="form-group">
						<label for="middleNameTextBox">Middle Name</label>
						@Html.EditorFor(model => model.MiddleName, new
				   {
					   htmlAttributes = new { @class = "form-control", @placeholder = "Middle Name", @id = "middleNameTextBox" }
				   })
					</div>
					<div class="form-group">
						<label for="lastNameTextBox">Last Name</label>
						@Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name", @id = "lastNameTextBox" } })
						@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
						@*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@
					</div>
					<div class="form-group">
						<label for="userNameTextBox">User Name</label>
						@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "User Name", @id = "userNameTextBox" } })
						@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
						@*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@
					</div>
					<div class="form-group">
						<label for="emailTextBox">Email</label>
						@Html.EditorFor(model => model.PrimaryEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @id = "emailTextBox", @type = "email" } })
						@Html.ValidationMessageFor(model => model.PrimaryEmail, "", new { @class = "text-danger" })
						@*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@
						<small id="emailHelp" class="form-text text-muted">We'll never share your Email with anyone else.</small>
					</div>
					<div class="form-group">
						<label for="RecoveryEmailTextBox">Recovery Email</label>
						@Html.EditorFor(model => model.RecoveryEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Recovery Email", @id = "RecoveryEmailTextBox", @type = "email" } })
						@Html.ValidationMessageFor(model => model.RecoveryEmail, "", new { @class = "text-danger" })
						@*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@
						<small id="emailHelp" class="form-text text-muted">We'll never share your Email with anyone else.</small>
					</div>
					<div class="form-group">
						<label for="mobileTextBox">Mobile No</label>
						@Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mobile No", @id = "mobileTextBox" } })
						@Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })
						@*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@
						<small id="emailHelp" class="form-text text-muted">We'll never share your Mobile No with anyone else.</small>
					</div>
					<div class="formLinks text-center">
						<button type="submit" class="btn btn-primary">Sign up</button>
					</div>
				}
			</div>
		</div>
	</div>
</div>